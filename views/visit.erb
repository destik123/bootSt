<h2>Записаться: </h2>

<form action="/visit" method="POST">
  <div class="form-group">
    <label>Ваше имя: </label>
    <input name="username" type="text" class="form-control" placeholder="Введите ваше имя">
  </div>
  <div class="form-group">
    <label>Ваш телефон: </label>
    <input name="phone" type="text" class="form-control" placeholder="Ваш телефон">
  </div>
  <div class="form-group">
    <label>Когда вас ждать: </label>
    <input name="datetime" type="text" class="form-control" placeholder="Время">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Выберите парикмахера: </label>
    <select name="select_barber" class="form-control">
      <option>Валентин</option>
      <option>Дарья</option>
      <option>Камшот</option>
      <option>Валерий</option>
      <option>Сашуля</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Записаться</button>
</form>